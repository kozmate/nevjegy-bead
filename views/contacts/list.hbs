{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Telefonkönyv</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Név</th>
            <th>Telefonszám</th>
            <th>Módosítás</th>
            <th>Törlés</th>
        </tr>   
    </thead>
    <tbody>
        {{#each contacts}}
        {{!--{{#ifCond ownerId 2}}--}}
        <tr>
            <td>{{date}}</td>
            <td><span class="label label-success">{{statusText}}</span></td>
            <td>{{contactName}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{phoneNumber}}</td>
            <td><a href="/contacts/{{id}}">Módosítás</a></td>
            <td><a class="btn btn-danger btn-sm" href="/contacts/delete/{{id}}">Törlés</a></td>
        </tr>
        {{!--{{/ifCond}}--}}
        {{/each}}
    </tbody>
</table>

<p><a href="/contacts/new" class="btn btn-default">Új kontakt felvétele</a></p>
