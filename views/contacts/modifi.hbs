<div class="page-header">
    <h1>Módosítás</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
       <div class="form-group
            {{#if validationErrors.contactName}}
                has-error
            {{/if}}
        ">
            <label for="contactName" class="col-lg-2 control-label">Név</label>
            <div class="col-xs-3">
                <input class="form-control" id="contactName" name="contactName" value="{{contact.contactName}}" type="text" value="{{data.contactName}}">
                {{#if validationErrors.contactName}}
                    <span class="help-block">{{validationErrors.contactName.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.phoneNumber}}
                has-error
            {{/if}}
        ">
            <label for="phoneNumber" class="col-lg-2 control-label">Telefonszám</label>
            <div class="col-xs-3">
                <input class="form-control" id="phoneNumber" name="phoneNumber" value="{{contact.phoneNumber}}" type="text" value="{{data.phoneNumber}}">
                {{#if validationErrors.phoneNumber}}
                    <span class="help-block">{{validationErrors.phoneNumber.msg}}</span>
                {{/if}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                {{!--<button type="reset" class="btn btn-default">Mégse</button>--}}
                <button type="submit" class="btn btn-primary">Küldés</button>
            </div>
        </div>
    </fieldset>
</form>   
    </body>
    
</html>